@page
@model EJ2CoreSampleBrowser.Pages.Chart.PieModel
@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var piecenter = new
        {
            x = "50%",
            y = "50%"
        };

    }
    <div class="control-section" align='center'>
        <ejs-accumulationchart id="container" title="Browser Market Share" load="load" enableAnimation="true" enableBorderOnMouseMove="false">
            <e-accumulationchart-center x="50%" y="50%"></e-accumulationchart-center>
            <e-accumulationchart-tooltipsettings enable="true" format="<b>${point.x}</b><br>Browser Share: <b>${point.y}%</b>" header="" enableHighlight="true"></e-accumulationchart-tooltipsettings>
            <e-accumulationchart-legendsettings visible="false">
            </e-accumulationchart-legendsettings>
            <e-accumulation-series-collection>
                <e-accumulation-series dataSource="@Model.ChartPoints" xName="Browser" yName="Users" name="Browser" innerRadius="0%" explodeIndex="0" explode="true" explodeOffset="10%">
                    <e-accumulationseries-datalabel name="DataLabelMappingName" visible="true" position="@Syncfusion.EJ2.Charts.AccumulationLabelPosition.Outside">
                        <e-font fontWeight="600"></e-font>
                        <e-connectorstyle length="20px" type="@Syncfusion.EJ2.Charts.ConnectorType.Curve"></e-connectorstyle>
                    </e-accumulationseries-datalabel>
                </e-accumulation-series>
            </e-accumulation-series-collection>
        </ejs-accumulationchart>
    </div>

    <script>
        function load(args) {
            var indexedTheme = location.hash.split('/')[1];
            indexedTheme = indexedTheme ? indexedTheme : 'Fluent2';
            args.accumulation.theme = (indexedTheme.charAt(0).toUpperCase() + indexedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5'));
            args.accumulation.series[0].startAngle = ej.base.Browser.isDevice ? 70 : 30;
            args.accumulation.series[0].radius = ej.base.Browser.isDevice ? "40%" : "60%";
        }
    </script>
}

