@page
@model EJ2CoreSampleBrowser.Pages.Chart.RangeBarModel
@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var border = new Syncfusion.EJ2.Charts.ChartBorder { Width = 0, Color = "transparent" };
        var line = new
        {
            width = 0.0001
        };
    }
<div class="control-section" align="center">

        <ejs-chart id="lineContainer"  load="load" title="Temperature Variation"
                  isTransposed="true">
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category">
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift" labelFormat = "{value}ËšF" title="Temperature (In Fahrenheit)">
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-series-collection>
                <e-series dataSource="@Model.ChartPoints" xName="Month" high="CA_HighTemp" low="CA_LowTemp" columnSpacing="0.1" tooltipMappingName="Text" type="@Syncfusion.EJ2.Charts.ChartSeriesType.RangeColumn">
                    <e-series-marker>
                        <e-series-datalabel visible="true" position="@Syncfusion.EJ2.Charts.LabelPosition.Outer">
                        </e-series-datalabel>
                    </e-series-marker>
                </e-series>
            </e-series-collection>
            <e-chart-tooltipsettings enable="true" header="<b>${point.tooltip}</b>" enableMarker="false" format="Temperature : <b>${point.low} - ${point.high}</b>"></e-chart-tooltipsettings>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
