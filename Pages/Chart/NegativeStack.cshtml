@page
@model EJ2CoreSampleBrowser.Pages.Chart.NegativeStackModel
@using Syncfusion.EJ2

@section ControlsSection{
   <div class="control-section">
        <div id="container" align="center">
            <ejs-chart id="lineContainer"  load="load" axisLabelRender="axisLabelRender" title="Height vs Weight"
                      tooltipRender="tooltipRender" textRender="dataLabelRender">
                <e-chart-tooltipsettings enable="true">
                </e-chart-tooltipsettings>
                <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" title="Height in Inches" interval=1>
                    <e-majorgridlines width="0"></e-majorgridlines>
                    <e-majorticklines width="0"></e-majorticklines>
                </e-chart-primaryxaxis>
                <e-chart-primaryyaxis labelFormat="{value}" title="Weight (kg)" rangePadding="@Syncfusion.EJ2.Charts.ChartRangePadding.Round">
                    <e-linestyle width="0"></e-linestyle>
                    <e-majorticklines width="0"></e-majorticklines>
                </e-chart-primaryyaxis>
                <e-chart-chartarea>
                    <e-chartarea-border width="0"></e-chartarea-border>
                </e-chart-chartarea>
                <e-chart-legendsettings enableHighlight="true">
                </e-chart-legendsettings>
                <e-series-collection>
                    <e-series dataSource="@Model.ChartPoints" xName="Height" yName="Female" name="Female" width="2" columnWidth="0.5" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingBar">
                        <e-series-marker>
                            <e-series-datalabel position="@Syncfusion.EJ2.Charts.LabelPosition.Top" visible="true" name="Female_Text">
                                <e-font fontWeight="600"></e-font>
                            </e-series-datalabel>
                        </e-series-marker>
                    </e-series>
                    <e-series dataSource="@Model.ChartPoints" xName="Height" yName="Male" name="Male" width="2" columnWidth="0.5" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingBar">
                        <e-series-marker>
                            <e-series-datalabel name="Text" position="@Syncfusion.EJ2.Charts.LabelPosition.Top" visible="true">
                                <e-font fontWeight="600"></e-font>
                            </e-series-datalabel>
                        </e-series-marker>
                    </e-series>
                </e-series-collection>
            </ejs-chart>
        </div>
    </div>
    <script>
        function load(args) {
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Fluent2';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5'));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.legendSettings.position = ej.base.Browser.isDevice ? "Bottom" : "Right";
        }
        function tooltipRender(args) {
            args.text = args.text.indexOf('-') > 0 ? args.text.replace('-', '') : args.text;
            args.text = args.text + " " + "<b>kg</b>";
        }
        function dataLabelRender(args) {
            args.text = args.text.indexOf('-') > -1 ? args.text.replace('-', '') : args.text;
        }
        function axisLabelRender(args) {
            if (args.value < 0) {
                args.text = (-args.value).toString();
            }
        }
    </script>
}
