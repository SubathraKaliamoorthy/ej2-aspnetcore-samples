@page
@model EJ2CoreSampleBrowser.Pages.Chart.LineZoneModel
@using Syncfusion.EJ2
@using Syncfusion.EJ2.Charts;


@{
    string valueX = "95%";
}

@section ControlsSection {

    <div class="control-section" align="center">
        <ejs-chart id="lineContainer" load="load" title="Annual Mean Rainfall in Australia">
            <e-chart-tooltipsettings enable="true" shared="true" header="<b>Rainfall</b>" format="${point.x} : <b>${point.y}</b>" enableMarker="true">
            </e-chart-tooltipsettings>
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime"
                                  labelFormat="yyyy"
                                  minimum="new DateTime(1910, 1, 1)"
                                  maximum="new DateTime(2010, 1, 1)"
                                  intervalType="@Syncfusion.EJ2.Charts.IntervalType.Years"
                                  edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                <e-majorgridlines width="0"></e-majorgridlines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis labelFormat="{value}mm"
                                  rangePadding="@Syncfusion.EJ2.Charts.ChartRangePadding.None"
                                  minimum="200"
                                  maximum="800"
                                  interval="100">
                <e-linestyle width="0"></e-linestyle>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-annotations>
                <e-chart-annotation content="<div style='color:green;font-weight:bold;font-size:14px'>Medium</div>" region="@Syncfusion.EJ2.Charts.Regions.Series"></e-chart-annotation>
                <e-chart-annotation content="<div style='color:blue;font-weight:bold;font-size:14px'>High</div>" region="@Syncfusion.EJ2.Charts.Regions.Series" y="10%"></e-chart-annotation>
                <e-chart-annotation content="<div style='color:red;font-weight:bold;font-size:14px'>Low</div>" region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX" y="84%"></e-chart-annotation>
            </e-chart-annotations>
            <e-series-collection>
                <e-series segmentAxis="@Syncfusion.EJ2.Charts.Segment.Y" xName="XValue" width="2" yName="YValue" type="@Syncfusion.EJ2.Charts.ChartSeriesType.MultiColoredLine" segments="@Model.Segments">
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>

    <script>
        function load(args) {
            var selectedTheme = location.hash.split("/")[1];
            var annualMean = [];
            [
                380, 410, 310, 540, 510, 330, 490, 470, 472, 460, 550, 420, 380, 430, 385, 520, 580, 420, 350, 505,
                535, 410, 204, 400, 415, 408, 415, 350, 375, 500, 390, 450, 440, 350, 400, 365, 490, 400, 520, 510,
                395, 380, 404, 400, 500, 390, 610, 380, 390, 420, 440, 570, 600, 380, 410, 405, 480, 320, 420, 440,
                320, 280, 320, 400, 390, 460, 470, 490, 420, 480, 410, 420, 580, 410, 380, 480, 360, 650, 680, 720,
                580, 480, 520, 440, 420, 430, 380, 520, 410, 540, 400, 390, 460, 470, 490, 420, 480, 470, 490, 330,
                520, 480, 580, 590, 600, 310, 480, 500, 400, 508, 480, 460, 700, 705, 480, 410, 480
            ].map(function (value, index) {
                annualMean.push({ XValue: new Date(1900 + index, 1, 1), YValue: value });
            });
            args.chart.series[0].dataSource = annualMean;
            selectedTheme = selectedTheme ? selectedTheme : "Material";
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-highContrast/i, 'HighContrast').replace(/5.3/i, '5'));
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.annotations[0].x = ej.base.Browser.isDevice ? "21%" : "19%";
            args.chart.annotations[0].y = ej.base.Browser.isDevice ? "42%" : "47%";
            args.chart.annotations[1].x = ej.base.Browser.isDevice ? "68%" : "69%";
        }
    </script>
}
@*custom code start*@
<style>

    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@

@section Meta {
    <meta name="description" content="This example demonstrates the Line Zone in ASP.NET Core Chart control. Explore here for more details." />
}


@section ActionDescription {
    <p>
        This sample visualizes the annual mean rainfall in Australia with multi-colored line series in the chart. Data points are enhanced with segments and tooltips.
    </p>
}

@section Description {
    <p>
        In this example, you can see how to render and configure the points in a particular range by using <code>MultiColoredLine</code> series. Points under the range can be customized with <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.Charts.ChartSegment.html#Syncfusion_EJ2_Charts_ChartSegment_Color" aria-label="Navigate to the color property reference for ASP.NET Core ChartSegment">Color</a> and
        <a target="_blank" href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.Charts.ChartSegment.html#Syncfusion_EJ2_Charts_ChartSegment_DashArray" aria-label="Navigate to the DashArray property reference for ASP.NET Core ChartSegment">DashArray</a> properties in <code>ChartSegment</code>.
    </p>
