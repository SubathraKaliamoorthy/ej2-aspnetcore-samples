@page
@model EJ2CoreSampleBrowser.Pages.Pdf.Encryption

@using Syncfusion.EJ2

@{ var Title = "Essential PDF : Encryption : Syncfusion"; }



@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("encryption", "pdf", FormMethod.Post);
            {
                <div class="tablediv" style="font-size:14px">
                    Click the button to view a PDF document generated by Essential PDF. Please note
                    that Adobe Reader or its equivalent is required to view the resultant document.
                </div>
                <br />
                <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">
                        <div style="padding: 5px 7px 5px 0px; font-size:14px">
                            <div>
                                <label style="font-weight:bold">
                                    Encryption Type&nbsp;&nbsp;&nbsp;:
                                </label>
                                <ejs-radiobutton id="rdButton40" name="encryptionType" label="40 Bit RC4" value="40_RC4" onclick="hideDropDownList();" />
                                <ejs-radiobutton id="rdButton128RC4" name="encryptionType" label="128 Bit RC4" value="128_RC4" onclick="hideDropDownList();" />
                                <ejs-radiobutton id="rdButton128AES" name="encryptionType" label="128 Bit AES" value="128_AES" checked="true" onclick="hideDropDownList();" />
                                <ejs-radiobutton id="rdButton256" name="encryptionType" label="256 Bit AES" value="256_AES" onclick="hideDropDownList();" />
                                <ejs-radiobutton id="rdButton256Revision6" name="encryptionType" label="256 Bit AES Revision 6" value="256_AES_Revision_6" onclick="hideDropDownList();" />

                            </div>

                            <div style="margin-top: 10px">
                                <div id="dropDownBox">
                                    <label style="font-weight:bold">
                                        Encryption Options&nbsp;&nbsp;&nbsp;:
                                    </label>
                                    <ejs-dropdownlist id="encrypt" name="encryptOption" width="280px" index="0" dataSource="@Model.data" placeholder="Select Encryption Options" popupHeight="200px">
                                        <e-dropdownlist-fields text="Encryption Options"></e-dropdownlist-fields>
                                    </ejs-dropdownlist>
                                </div>
                                <div>
                                    <br>
                                    <label style="font-weight:normal">
                                        User Password&nbsp;&nbsp;&nbsp;&nbsp;:
                                    </label>


                                    <label style="font-weight: normal">
                                        password
                                    </label>

                                    <label style="font-weight: normal">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>


                                    <label style="font-weight: normal" for="rdButton128AES">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>


                                    <label for="rdButton256" style="font-weight: normal">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>

                                    <label for="rdButton256" style="font-weight: normal">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>
                                </div>
                                <div>

                                    <label style="font-weight:normal">
                                        Owner Password&nbsp;:
                                    </label>

                                    <label style="font-weight: normal">
                                        syncfusion
                                    </label>


                                    <label style="font-weight: normal">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>


                                    <label style="font-weight: normal" for="rdButton128AES">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>


                                    <label for="rdButton256" style="font-weight: normal">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>

                                    <label for="rdButton256" style="font-weight: normal">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="tablediv" style="font-size:14px">
                        <div class="rowdiv">
                            <div class="celldiv">
                                <div>
                                    <input type="submit" class="e-btn" value="Encrypt PDF" style="width: 150px; text-transform:capitalize" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                Html.EndForm();
            }}
    </div>
}
@section ActionDescription{
    <p>
        This sample demonstrates how to encrypt the PDF document with encryption standards like 40-bit RC4, 128-bit RC4, 128-bit AES, 256-bit AES, and advanced encryption standard 256-bit AES Revision 6 (PDF 2.0) to protect documents against unauthorized access.
    </p>
}
@section Meta{
    <meta name="description" content="This example demonstrates the Encryption in ASP.NET Core PDF library. Explore here for more details." />
}
@section Description{
    <p>
        It is possible to protect with user password or owner password or both passwords and also possible to change or remove password and permission.
        More information about encryption or decryption can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-security">section.</a>
    </p>
}
<script type="text/javascript">
    function hideDropDownList() {
        var radioButtons = document.getElementsByName('encryptionType');
        for (var x = 0; x < radioButtons.length; x++) {
            if (radioButtons[x].checked) {
                switch (radioButtons[x].value) {
                    case "40_RC4":
                    case "128_RC4":
                        var dropObj = document.getElementById('encrypt').ej2_instances[0];
                        dropObj.text = "Encrypt all contents";
                        document.getElementById('dropDownBox').style.display = 'none';
                        break;
                    case "128_AES":
                    case "256_AES":
                    case "256_AES_Revision_6":
                        document.getElementById('dropDownBox').style.display = 'block';
                        break;
                }
            }
        }
    }
</script>
@section Title{
    <title>ASP.NET Core PDF library - Encryption Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Encryption in ASP.NET Core PDF Library</h1>
}