@using Syncfusion.EJ2
@using Syncfusion.EJ2.Spreadsheet

@section ControlsSection{
    <div class="control-section">
        <ejs-spreadsheet id="spreadsheet" showRibbon=false showFormulaBar=false created="createdHandler" beforeCellRender="beforeCellRender">
            <e-spreadsheet-sheets>
                <e-spreadsheet-sheet name="Order Details" showGridLines=false>
                    <e-spreadsheet-ranges>
                        <e-spreadsheet-range dataSource="ViewBag.orderDetails"></e-spreadsheet-range>
                    </e-spreadsheet-ranges>
                    <e-spreadsheet-rows>
                        <e-spreadsheet-row height=36>
                            <e-spreadsheet-cells>
                                <e-spreadsheet-cell value="Order ID">
                                    <e-spreadsheet-cellstyle textAlign="Right"></e-spreadsheet-cellstyle>
                                </e-spreadsheet-cell>
                                <e-spreadsheet-cell value="Customer Name">
                                    <e-spreadsheet-cellstyle textIndent="2pt"></e-spreadsheet-cellstyle>
                                </e-spreadsheet-cell>
                                <e-spreadsheet-cell value="Order Date">
                                    <e-spreadsheet-cellstyle textAlign="Right"></e-spreadsheet-cellstyle>
                                </e-spreadsheet-cell>
                                <e-spreadsheet-cell>
